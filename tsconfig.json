{
  "compilerOptions": {
    "target": "ES2020",                      
    "module": "CommonJS",                    
    "moduleResolution": "node",          
    "resolveJsonModule": true,         
    "esModuleInterop": true,                
    "forceConsistentCasingInFileNames": true,
    "strict": true,                      
    "skipLibCheck": true,                   
    "outDir": "./dist",              
    "rootDir": "./src",                    
    "noImplicitAny": true,                
    "strictNullChecks": true,
    "strictFunctionTypes": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
